<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_userImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profile_linearLayout"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userImage"
        app:layout_constraintVertical_bias="0.19999999">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:outlineProvider="none"
            android:text="Name:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_age"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="Age:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="Gender:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_height"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="Height:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_weight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="Weight:"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_in_linearlayout"
        android:layout_width="315dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userImage"
        app:layout_constraintVertical_bias="0.19999999">

        <TextView
            android:id="@+id/profile_in_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_in_age"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_in_gender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_in_height"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profile_in_weight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E4E4E4"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>